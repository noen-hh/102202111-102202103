/* 页面整体样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 844px; /* 页面高度 */
  width: 390px; /* 页面宽度 */
  padding: 10px;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60px; /* 根据实际需要调整 */
  background-color: #f8f8f8;
}

/* 搜索框样式 */
.search-bar {
  height: 40px; /* 根据实际需要调整 */
  padding: 10px;
  background-color: #ffffff;
}

/* 项目列表样式 */
.project-list {
  flex: 1; /* 占据剩余空间 */
  overflow-y: auto;
  padding: 10px;
}

/* 项目条目样式 */
.project-item {
  height: 100px; /* 根据实际需要调整 */
  border-bottom: 1px solid #eeeeee;
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 底部样式 */
.footer {
  width: 100%;
  height: 60px; /* 根据实际需要调整 */
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}