.container {
  padding: 20px;
}

.project-info {
  background-color: #fff;
  padding: 20px;
  margin-bottom: 20px;
}

.project-title {
  font-size: 16px;
  color: #333;
  font-weight: bold;
  margin-bottom: 5px;
}

.project-content {
  font-size: 14px;
  color: #666;
  margin-bottom: 15px;
}

.skills {
  margin-bottom: 15px;
}

.skill-tag {
  display: inline-block;
  background-color: #eee;
  padding: 20px 20px;
  border-radius: 5px;
  margin-right: 30px;
  color: #333;
}

.apply-button {
  background-color: #1aad19; /* 微信绿 */
  color: #ffffff;
  font-size: 16px;
  padding: 10px;
  border-radius: 5px;
  margin-top: 20px;
}