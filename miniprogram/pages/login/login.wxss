.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #87ceeb; /* Sky blue background */
}

.welcome-text {
  font-size: 24px;
  color: white;
  margin-top: 20vh; /* 1/5 of the page height */
  text-align: center;
  position: relative;
  z-index: 1; /* Ensure text is on top */
}

.form {
  width: 80%;
  margin-top: 50px;
}

input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  border: 1px solid rgb(247, 246, 246);
  border-radius: 4px;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}

.register-link {
  margin-top: 15px;
  text-align: center;
}
