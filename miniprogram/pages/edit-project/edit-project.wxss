.container {
  padding: 16px;
}

.page-title {
  font-size: 20px;
  margin-bottom: 16px;
}

.form-section {
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 16px;
}

.form-item {
  margin-bottom: 16px;
}

.form-label {
  font-size: 16px;
  margin-bottom: 8px;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-button,
.delete-button {
  margin-top: 16px;
  padding: 10px;
  width: 100%;
}

.submit-button {
  background-color: #4CAF50;
  color: white;
}

.delete-button {
  background-color: #f44336;
  color: white;
}
